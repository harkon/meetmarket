{{> header}}
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-9">
      {{#each products}}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img data-src="holder.js/100%x200" alt="100%x200" src="data:image/svg+xml;base64," style="height: 200px; width: 100%; display: block;">
          <div class="caption">
            <h3>{{name}}</h3>
            <p>{{short_desc}}</p>
            <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="col-xs-6 col-md-3">
      <button class="btn btn-primary" data-toggle="modal" data-target="#productModal" href="/products/new">Add product</button>
    </div>
  </div>
</div>
{{!-- /container --}}
<div id="productModal" class="modal fade product-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content"></div>
  </div>
</div>
{{#if success}}
  {{#each success}}
    <div class="alert alert-success" role="alert">{{this}}</div>
  {{/each}}
{{/if}}