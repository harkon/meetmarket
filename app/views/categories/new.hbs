<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h1 class="text-center">New Category</h1>
</div>
<div class="modal-body">
    <form method="post" action="/categories" enctype="application/x-www-form-urlencoded" role="form" class="form-horizontal">
        <input type="hidden" name="_csrf" value="{{ csrf_token }}">
        {{#unless category.isNew}}
        <input type="hidden" name="_method" value="PUT">
        {{/unless}}
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" name="name" value="{{ category.name }}" placeholder="Enter the name" class="form-control" id="name">
            </div>
        </div>
        <div class="form-group">
            <label for="parent" class="col-sm-2 control-label">Parent</label>
            <div class="col-sm-10">
                <select class="form-control" name="parentId">
                    {{!-- NOTE: keep this option disabled in order for the tree plugin to work--}}
                    <option disabled selected>None</option>
                    {{#each parents}}
                    <option value="{{_id}}">{{name}} </option>
                    {{/each}}
                </select>
                {{!-- <input type="parent" name="image[]" class="form-control" id="parent"> --}}
            </div>
        </div>
        <div class="form-group">
            <label for="desc" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                <textarea name="description" placeholder="Enter the category description" id="desc" cols="30" rows="10" class="form-control">
                {{ category.description }}
                </textarea>
            </div>
        </div>
        <div class="col-md-12">
            <button class="btn btn-primary btn-lg">Submit</button>
            <button class="btn btn-default btn-lg" data-dismiss="modal" aria-hidden="true">Cancel</button>
        </div>
    </form>
</div>
<div class="modal-footer">
</div>